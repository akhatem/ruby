<div class="post">
	<h1 class="title"><%= @post.title %></h1>
	<p class="entry"><%= @post.body %></p>
	<p class="byline">Date: <%= @post.created_at.strftime('%d/%m/%y') %> | Created by: <%= @post.admin_user.name %></p>
	<p clas="meta">Category: <%= link_to @post.category.name, category_path(:id => @post.category.id) %></p>
<p><%= link_to "Back to Posts", posts_path %><p>
</div>
