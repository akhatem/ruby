<% @posts.each do |post| %>
	<div class="post">
		<h1 class="title"><%= link_to post.title, post %></h1>
		<div class="byline">
			<p class="meta">Date: <%= post.created_at.strftime('%d/%m/%Y') %> | Posted by: <%= post.admin_user.name %></p>
			<p class="links"><%= link_to "Read More or comment", post %></p>
		</div>
	</div>
<% end %>