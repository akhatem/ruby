<p id="notice"><%= notice %></p>
<div class= "post">
<h1 class="title"><%= @category.name %></h1>
<% if @posts.each do |post| %>
<div>
  <h3><%= link_to post.title, post %></h3>
  <p class="entry"><%= post.body %></p>
  <p class="byline"><%= post.category.created_at.strftime("%d/%m/%Y") %></p>
</div>
<% end.empty? %>
	<p class="entry">Sorry, no posts available at the moment!</p>
<% end %>
<%= link_to 'Back to Categories', categories_path %>
</div>